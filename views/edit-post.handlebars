<h2 class="text-center">Edit Post</h2>
<section class="row justify-content-center">
  <div class="col-lg-6">
    <form class="edit-post-form">
      <div class="">
        <div class="card bg-secondary align-items-center">
          <div class="form-group w-75 my-3">
            <label for="title-input">Title</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend">
                  <i class="bi bi-fonts fs-4"></i>
                </span>
              </div>
              <input
                type="text"
                class="form-control"
                id="title-input"
                placeholder="Title"
                aria-describedby="inputGroupPrepend"
                value="{{postInfo.title}}"
              />
            </div>
            <div class="invalid-feedback">
              Please enter a valid title.
            </div>
          </div>
          <div class="form-group w-75 my-3">
            <label for="body-input">Body</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend">
                  <i class="bi bi-chat-square-text-fill fs-4"></i>
                </span>
              </div>
              <input
                type="text"
                class="form-control"
                id="body-input"
                placeholder="Write something here..."
                aria-describedby="inputGroupPrepend"
                value="{{postInfo.body}}"
              />
            </div>
            <div class="invalid-feedback">
              Please enter something to post.
            </div>
          </div>

          <button
            type="button"
            class="btn btn-danger btn-lg deleteBtn mb-3"
          >Delete Post</button>
          <button type="submit" class="btn btn-success btn-lg mb-3">Update Post</button>
        </div>
      </div>
    </form>
  </div>
</section>
<script src="/js/edit-post.js"></script>