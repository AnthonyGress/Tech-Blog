<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Tech Blog</title>
  </head>

  <body>
    <header>
      <h1 class="text-center my-3">Welcome to the Tech Blog</h1>
    </header>
    <nav class="navbar">
      <a class="nav-item btn btn-success p-2 w-25 ms-3" href="/">Home</a>
      {{#if loggedIn}}
        <a
          href="/dashboard"
          class="nav-item btn btn-secondary p-2 w-25"
        >Dashboard</a>
        <button
          class="nav-item btn btn-secondary p-2 w-25 me-3"
          id="logout"
        >Logout</button>
      {{else}}
        <a href="/signup" class="nav-item btn btn-secondary p-2 w-25"><id
            id="signup"
          >Sign up</id></a>
        <a href="/login" class="nav-item btn btn-secondary p-2 w-25 me-3"><id
            id="login"
          >Sign In</id></a>

      {{/if}}
    </nav>
    <main>
      <div class="body-wrapper container">
        {{{body}}}
      </div>
    </main>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/main.js"></script>
  </body>

</html>