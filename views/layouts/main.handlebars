<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="./css/style.css" />
    <title>Tech Blog</title>
  </head>

  <body>
    <header>
      <h1 class="text-center my-3">Welcome to the Tech Blog</h1>
    </header>
    <nav class="navbar">
      <div class="nav-item bg-secondary p-2"><a href="/">Home</a></div>
      <div class="nav-item bg-secondary p-2"><a
          href="/dashboard"
        >Dashboard</a></div>
      {{#if loggedIn}}
        <div class="nav-item bg-secondary p-2"><a
            href="/api/user/logout"
          >Logout</a></div>
        {{! <div class="nav-item"><a href="/dashboard">Dashboard</a></div> }}
      {{else}}
        <div class="nav-item bg-secondary p-2"><a href="/login">Login</a></div>

      {{/if}}
    </nav>
    <main>
      <div class="all-posts container">
        {{{body}}}
      </div>
    </main>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>