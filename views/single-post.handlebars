<section class="container">
  <h3 class="header text-center">Single Post</h3>
  <section class="flex-row justify-center">
    <section class="col">
  <div class="card my-4 bg-dark">
      <header class="ps-4 card-header bg-success">{{title}} - {{user.username}}</header>
      <p class="ps-4 card-body">{{body}}</p>
  </div>
  {{#if comments}}
    {{#each comments}}
    {{> comment-details}}
    {{/each}}
  {{else}}
  <div class="mt-5">
    <h3 class="text-center">No comments yet..be the first to say something!</h3>
  </div>
  {{/if}}
  <h3 class="text-center">Leave a Comment</h3>
  {{#if loggedIn}}
   {{> leave-comment}}
   <script src="/js/comment.js"></script>
  {{else}}
<h3 class="mt-4">Sign in to leave a comment</h3> <button class="nav-item btn btn-success p-2" id="login"><a href="/login">Sign in</a></button>
  {{/if}}
</section>
  </section>
</section>